<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_goods_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="www.yigou.com.bayigou.home.view.GoodsInfoActivity">

        <ImageView
            android:id="@+id/goodsImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sellerType"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/goodsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="商品名"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/goodsSubhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="描述"
            />
        <TextView
            android:id="@+id/goodsPricce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售价:"
            android:textColor="@color/bg_user_textview"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/salenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售:"
                android:textColor="@color/bg_user_textview"
                />
            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/productNums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存:"
                android:textColor="@color/bg_user_textview"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/sellerLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sellerImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/sellerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家名"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/dateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            />
    </LinearLayout>

    <Button
        android:id="@+id/buyIt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加入购物车"
        />



</LinearLayout>
